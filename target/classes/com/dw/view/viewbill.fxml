                                </HBox>
                                <HBox>
                                    <children>
                                        <Label fx:id="billAmtLab"></Label>
                                        <Label fx:id="billAmt"></Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="closeButton">close</Button>
            </children>
        </HBox>
    </children>
