<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dw.controller.ViewBillController"
      stylesheets="@global.css" fx:id="viewBillVBox">
    <children>
        <HBox styleClass="topFlowPane" fx:id="topBillHbox">
            <children>
                <Label fx:id="refNumLab"></Label>
                <Label fx:id="refNum"></Label>
                <Label fx:id="tableNumLab"></Label>
                <Label fx:id="tableNum"></Label>
                <Label fx:id="personLab"></Label>
                <Label fx:id="person"></Label>
                <Label fx:id="billAmtTopLab"></Label>
                <Label fx:id="billAmtTop"></Label>
            </children>
        </HBox>
        <TableView fx:id="orderListView">
            <columns>

            </columns>
        </TableView>
        <TableView fx:id="paylist">
            <columns>

            </columns>
        </TableView>
        <HBox fx:id="buttomFlowPane">
            <children>
                <!--<DwButton fx:id="paymentButton" styleClass="paymentbutton" text="" userData="bill.pay" />-->
                <Button fx:id="reprintBtn">reprint</Button>
