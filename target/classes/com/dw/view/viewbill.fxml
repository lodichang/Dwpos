                    <children>
                        <VBox fx:id="infoLeftVBox">
                            <children>
                                <HBox>
                                    <children>
                                        <Label fx:id="itemDiscLab"></Label>
                                        <Label fx:id="itemDisc"></Label>
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label fx:id="catDiscLab"></Label>
                                        <Label fx:id="catDisc"></Label>
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label fx:id="orderDiscLab"></Label>
                                        <Label fx:id="orderDisc"></Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox fx:id="infoRightVBox">
                            <children>
                                <HBox>
                                    <children>
                                        <Label fx:id="serverLab"></Label>
                                        <Label fx:id="server"></Label>
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label fx:id="orderAmtLab"></Label>
